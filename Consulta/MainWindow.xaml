<Window x:Class="Consulta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Consulta"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="gridConsulta" ItemsSource="{Binding Path=ListaConsulta}" HorizontalAlignment="Left" Height="240" Margin="0,120,0,0" VerticalAlignment="Top" Width="792"/>
        <Menu HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="792">
            <MenuItem x:Name="mniArchivo" Header="Archivo" Height="23" Width="100">
                <MenuItem x:Name="mniAgregar" Header="Agregar" HorizontalAlignment="Left" Height="23" Width="134" Margin="0,0,-34,0" Click="mniAgregar_Click"/>
                <MenuItem x:Name="Salir" Header="Salir" HorizontalAlignment="Left" Height="29" Width="140" Click="Salir_Click"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
